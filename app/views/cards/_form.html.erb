<% semantic_form_for @card do |f| %>
  <% f.inputs do %>
    <%= f.input :month_idx, :as => :select, :collection => months %>
    <%= f.input :class_idx %>
    <%= f.input :question_idx %>
    <%= f.input :standard %>
    <%= f.input :question, :as => :text %>
    <%= f.input :answer, :as => :text %>
  <% end %>
  <%= f.buttons %>
<% end %>
